{% extends "layout.twig" %}

{% block content %}

<!-- Page Content -->
<section class="page  page--partners">

    <div class="hero  hero--partners" id="partner-signup">

        <div class="hero-partners-content">

            <div class="hero-partners-header">
                <a href="/" class="hero-partners-logo">
                    <img src="{{asset('/images/logo.svg')}}" alt="">
                </a>
            </div>

            <!-- Hero Item: Form -->
            <div class="hero-item--module">
                
                <div class="container-form">
                    <form class="partner-form">
                        <div class="parnter-form-container">

                            <div class="hero-partners-description">
                                <h3>Forgotten password</h3>
                                <p>Lorem ipsum dolor sit amet</p>
                            </div>

                            <div class="zone-forgotten-pw">
                                {{zone('main')|raw}}
                            </div>

                            <div class="main-form">
                                {{widget('forgottenpassword', 'forgottenpassword', {'passwordResetPage':'reset-password','text':'Submit'})|raw}}
                                <p class="clearfix form-link">Remembered your password? <a href="/login" class="signup-btn"><span>Login here</span>.</a></p>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>

{% endblock %}

